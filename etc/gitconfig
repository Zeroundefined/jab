[user]
    name = J Alan Brogan
    email = github@al-got-rhythm.net
[github]
    user = jalanb
[pager]
    diff =
[core]
    editor = vim
    excludesfile = ~/.gitignore_global
[alias]
    br = branch
    ci = commit
    co = checkout
    dh = difftool -y --extcmd=\"vim -d -o\"
    dump = cat-file -p
    dv = difftool -y --extcmd=\"vim -d -O\"
    dw = diff --word-diff
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    last = log -1 HEAD
    lg = log --oneline --graph --decorate --pretty=format:'%C(auto)%h%Creset %C(auto)%d%Creset %s %Cgreen(%cr) %C(blue)<%an>%Creset' --abbrev-commit --date=relative
    st = status
    pr = pull --rebase
    pu = push
[push]
    default = simple
[merge]
    tool = vimdiff
[color]
    ui = auto
[help]
    autocorrect = 1
[credential]
    helper = store

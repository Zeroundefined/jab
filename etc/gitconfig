[user]
    name = Alan Brogan
    email = github@al-got-rhythm.net
[core]
    editor = vim
	excludesfile = /home/alanb/.gitignore_global
[merge]
    tool = vimdiff
[color]
    ui = auto
[push]
    default = simple
[credential]
    helper = store
[alias]
    ai = add --interactive
    br = branch
    ci = commit
    co = checkout
    dc = difftool -y --extcmd=colordiff
    dh = difftool -y --extcmd=\"vim -d -o\"
    dp = difftool -y --extcmd=pydiff
    dv = difftool -y --extcmd=\"vim -d -O\"
    dw = diff --word-diff
    last = log -1 HEAD
    lg = log --oneline --graph --decorate --pretty=format:'%C(auto)%h%Creset %C(auto)%d%Creset %s %Cgreen(%cr) %C(blue)<%an>%Creset' --abbrev-commit --date=relative
    pr = pull --rebase
    pu = push
[help]
    autocorrect = 1

cff ()
{
	if [[ ! -d fred ]]
	then
		if [[ -e fred ]]
		then rm -f fred
		fi
		mkdir fred
	fi
	cd fred
}


cls ()
{
# clean, clear, ls
	rf -q
	clear
	if [ -z "$@" ]
	then
	    ls -d $(pwd)
	    echo
	fi
	ls "$@"
}

dev ()
{
	if [[ -d ~/dev ]]
	then
		echo ~/dev exists
		echo 
		here=$PWD
		cd ~/dev
		ls
		cd $here
		echo You may wish to try
		echo "    mv ~/dev/* ~/src; rm -rf ~/dev"
	fi
	[[ ! -d ~/src ]] && mkdir ~/src
	c ~/src "$@"
	ls
}

fgp ()
{
	fgv *.py "$@"
}

fgt ()
{
	fgv *.test *.tests "$@"
}

fsh ()
{
# run fred by his extension
	if [ -f fred.sh ]
	then
		bash fred.sh "$@"
	elif [ -f fred.py ]
	then
		p fred.py "$@"
	elif [ -f "fred.test" ]
	then
		try "fred.test" "$@"
	elif [ -f fred.c ]
	then
		/bin/rm -vf a.out
		gcc fred.c
		if [ -f a.out ]
		then
			./a.out
		fi
	else
		bash fred "$@"
	fi
}

fpy ()
{
# run fred.py if fred.sh exists
	if [ -f fred.py ]
	then
		p fred.py "$@"
	fi
}


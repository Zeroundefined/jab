fsh ()
{
# run fred by his extension
    if [ -f fred.sh ]
    then
        bash fred.sh "$@"
    elif [ -f fred.py ]
    then
        p fred.py "$@"
    elif [ -f "fred.test" ]
    then
        try "fred.test" "$@"
    elif [ -f fred.c ]
    then
        /bin/rm -vf a.out
        gcc fred.c
        if [ -f a.out ]
        then
            ./a.out
        fi
    else
        bash fred "$@"
    fi
}


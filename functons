dev ()
{
    if [[ -d ~/dev ]]
    then
        echo ~/dev exists
        echo
        here=$PWD
        cd ~/dev
        ls
        cd $here
        echo You may wish to try
        echo "    mv ~/dev/* ~/src; rm -rf ~/dev"
    fi
    [[ ! -d ~/src ]] && mkdir ~/src
    c ~/src "$@"
    ls
}


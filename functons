ru ()
{
# do da root root route, do da ru !
    if [ -z "$@" ]
    then
        SUDO
    else
        sudo "$@"
    fi
}

tm ()
{
    if [[ -z $1 ]]
    then SESSION=$(jostname)
    else
        SESSION=$1
        shift
    fi
    if ! tmux attach-session -t $SESSION "$@"
    then tmux new-session -s $SESSION "$@"
    fi
}

tf ()
{
    if [ $? -eq 0 ]
    then echo "true"
    else echo "false"
    fi
}

uj ()
{
# update $JAB from the repository
    if [[ $(svn up $JAB | grep -v "At revision" | wc -l) != "0" ]]
    then
        BACK=$(pwd)
        if [[ $BACK != "$JAB" ]]
        then
            cd $JAB
            . bashrc
            cd $BACK
        else
            . bashrc
        fi
    fi
}


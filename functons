pg ()
{
    ps -ef | grep -v grep | grep "$@"
}

pi ()
{
    local me=$USER
    local here=$(jostname)
    local options=-noconfirm_exit
    if [[ $(ipython --help | grep no.*confirm) == "--no-confirm-exit" ]]
    then options=--no-confirm-exit
    fi
    console_title_on "ipython@${here}" && \
        ipython $options "$@" && \
        console_title_off "${me}@${here}"
}


py ()
{
    if [[ -z "$@" ]]
    then
        mython
    else
        all_args="$*"
        if [[ "$all_args" =~ "--help" || "$all_args" =~ "-h" ]]
        then mython "$@"
        elif [[ "$all_args" =~ "-U" ]]
        then mython "$@"
        else
            script=$(mython $JAB_PYTHON/scripts.py -m $args 2>/dev/null)
            if [[ $? == 0 ]]
            then
                if [[ -z $script ]]
                then
                    script=${1/%./.py}
                    shift
                fi
                mython $script $*
            else
                mython "$@"
            fi
        fi
    fi
}

ra ()
{
    range "$@"
}

rf ()
{
    PYTHON_SCRIPT=$JAB_PYTHON/rf.py
    python $PYTHON_SCRIPT "$@"
}

rj ()
{

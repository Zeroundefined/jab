jab_scripts()
{
    python $JAB_PYTHON/scripts.py "$@"
}

vim_diff ()
{
    one="$1"
    shift
    two="$1"
    shift
    options="$@"
    if ! diff -q "$one" "$two" >/dev/null
    then
        $EDITOR -d $options "$one" "$two"
    else
        echo same
    fi
}


llt ()
{
	first_dir "$@"
	l --color=always -lhtr "$dir" | less -R -m -N +G
}

lly ()
{
	first_dir "$@"
	reset=$(shopt -p dotglob)
	shopt -s dotglob
	ls -lhtr "$dir"/*.tests
	echo
	ls -lhtr "$dir"/*.test
	echo
	ls -lhtr "$dir"/*.py
	$reset
}

lyy ()
{
	reset=$(shopt -p dotglob)
	shopt -s dotglob
	ls -xd $(ls -F |grep \/$)
	echo
	ls -xhtr *.tests 2>/dev/null
	echo
	ls -xhtr *.test 2>/dev/null
	echo
	ls -xhtr *.py 2>/dev/null
	$reset
}


build ()
{
	if [[ $USER == "jab" ]]
	then
		if [[ -n "$1" ]]
		then
			user=abrogan
		else
			user=builder
		fi
	else
		user=$USER
	fi
	if [[ -n "$1" && "$1" == "2" ]]
	then
		ssh $user@ie-build-2
	elif [[ "$HOSTNAME" == "ie-build-1" ]]
	then
		ssh $user@ie-build-2
	else
		ssh $user@ie-build-1
	fi
}

clean ()
{
	rf -q "$@"
}

kodos ()
{
	pushd ~/bin/kodos-2.4.9/ >/dev/null
	/usr/bin/python kodos.py &
	popd >/dev/null
}

named ()
{
	dir=
	if first_dir $1
	then shift
	fi
	find $dir -name "$@"
}

vfile ()
{
	$(echo "$@" | sed -e"s/up to //" -e"s/^File/v/" | sed -e"s/, line \([0-9]*\).*/ +\1/" -e"s/\.test +\([0-9]*\)/.py -c :tabnext|\1/")
}

